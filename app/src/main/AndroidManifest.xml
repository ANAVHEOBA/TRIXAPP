<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trixapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trixapp">
        
        <!-- Registration Activity as the launcher -->
        <activity
            android:name=".RegistrationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Category Selection Activity -->
        <activity
            android:name=".CategorySelectionActivity"
            android:exported="false" />

        <!-- Welcome Activity -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="false" />

        <!-- Vote Activity -->
   <activity
    android:name=".VoteRewardActivity"
    android:exported="false" />    

    <!-- Home Activity -->
<activity
    android:name=".HomeActivity"
    android:exported="false" />

    <!-- Connectwallet Activity -->
<activity
    android:name=".ConnectWalletActivity"
    android:exported="false" />
        
         <!-- Task Activity -->
        <activity
    android:name=".TasksActivity"
    android:exported="false" />
     
      <!-- Task Details Activity -->
    <activity
    android:name=".TaskDetailsActivity"
    android:exported="false" />
     
     <!-- SocialShare Task Details Activity -->
    <activity
    android:name=".SocialShareTaskActivity"
    android:exported="false" />

    </application>
</manifest>